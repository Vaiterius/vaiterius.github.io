---
import Header from "../components/Header.jsx";
import Footer from "../components/Footer.jsx";

import "@fontsource/roboto-mono";
import "@fontsource/roboto-mono/700.css"; // Bold.
import "@fontsource/roboto-mono/500.css"; // Medium.

const { title } = Astro.props;
---

<html lang="en" class="scroll-smooth focus:scroll-auto">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-3D7RK2YGQF"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-3D7RK2YGQF");
		</script>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<!-- TODO the navbar -->
		<!-- <Header /> -->
		<!-- Will this work?? -->
		<script>
			import ReactGA from "react-ga4";
			ReactGA.initialize("G-3D7RK2YGQF");
		</script>
		<main>
			<!-- Is replaced for main page content. -->
			<slot />
		</main>
		<Footer year={new Date().getFullYear()} />
	</body>
</html>

<style>
	html {
		font-family: "Roboto Mono";
		background-color: #071427;
		opacity: 1;
		background-image: radial-gradient(#00255c 1.55px, transparent 1.55px),
			radial-gradient(#00255c 1.55px, #071427 1.55px);
		background-size: 62px 62px;
		background-position:
			0 0,
			31px 31px;
	}
</style>
